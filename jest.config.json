{
	"testEnvironment": "node",
	"testRegex": "/test/unit/.*\\.spec\\.(jsx?|tsx?)$",
	"transform": {
		"^.+\\.(jsx?|tsx?)$": "babel-jest"
	},
	"collectCoverage": true,
	"collectCoverageFrom": [
		"src/**/*.{js,jsx,ts,tsx}",
		"!**/*.d.ts",
		"!**/node_modules/**"
	],
	"coverageReporters": [
		"lcovonly",
		"text"
	]
}
